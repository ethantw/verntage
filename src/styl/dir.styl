
$vern-dir
  h1
    margin 0 .67em

  ul,
  ol
    padding-left 0
    padding-top 2em

  h1 + blockquote,
  h2 + blockquote,
  h3 + blockquote,
  h4 + blockquote,
  h5 + blockquote,
  h6 + blockquote,
  h1 + p,
  h2 + p,
  h3 + p,
  h4 + p,
  h5 + p,
  h6 + p,
  h1 + ol,
  h2 + ol,
  h3 + ol,
  h4 + ol,
  h5 + ol,
  h6 + ol,
  h1 + ul,
  h2 + ul,
  h3 + ul,
  h4 + ul,
  h5 + ul,
  h6 + ul,
  h1 + h6,
  h2 + h6,
  h3 + h6,
  h4 + h6,
  h5 + h6,
  h6 + h6,
  h1 + section > h6:first-child,
  h2 + section > h6:first-child,
  h3 + section > h6:first-child,
  h4 + section > h6:first-child,
  h5 + section > h6:first-child,
  h6 + section > h6:first-child,
  h1 + section > p:first-child,
  h2 + section > p:first-child,
  h3 + section > p:first-child,
  h4 + section > p:first-child,
  h5 + section > p:first-child,
  h6 + section > p:first-child,
  h1 + section > ol:first-child,
  h2 + section > ol:first-child,
  h3 + section > ol:first-child,
  h4 + section > ol:first-child,
  h5 + section > ol:first-child,
  h6 + section > ol:first-child,
  h1 + section > ul:first-child,
  h2 + section > ul:first-child,
  h3 + section > ul:first-child,
  h4 + section > ul:first-child,
  h5 + section > ul:first-child,
  h6 + section > ul:first-child,
  h1 + section > blockquote:first-child,
  h2 + section > blockquote:first-child,
  h3 + section > blockquote:first-child,
  h4 + section > blockquote:first-child,
  h5 + section > blockquote:first-child,
  h6 + section > blockquote:first-child,
  h1 + h5,
  h2 + h5,
  h3 + h5,
  h4 + h5,
  h5 + h5,
  h1 + section > h5:first-child,
  h2 + section > h5:first-child,
  h3 + section > h5:first-child,
  h4 + section > h5:first-child,
  h5 + section > h5:first-child,
  h1 + h4,
  h2 + h4,
  h3 + h4,
  h4 + h4,
  h1 + section > h4:first-child,
  h2 + section > h4:first-child,
  h3 + section > h4:first-child,
  h4 + section > h4:first-child,
  h1 + h3,
  h2 + h3,
  h3 + h3,
  h1 + section > h3:first-child,
  h2 + section > h3:first-child,
  h3 + section > h3:first-child,
  h1 + h2,
  h2 + h2,
  h1 + section > h2:first-child,
  h2 + section > h2:first-child
    margin-top 0
    margin-right -1em

  h-char.biaodian
    &.open > h-inner
      margin-left: 0
      margin-top: -.5em

  h-char-group
    .liga:not(:last-child)
      margin-right: 0
      margin-bottom: -.25em

  h-hangable:lang(zh)
    position: relative
    display: inline

    h-char.biaodian.close h-cs
      display: none
    > h-cs
      position: relative
      display: inline !important
      visibility: visible
      font: inherit
    > h-cs h-inner,
    > h-cs h-inner[hidden]
      display: inline
      visibility: hidden
      font: 1em 'Han Space', $han-mono
    > h-cs:after
      han-typo-reset()
      position absolute
      top 0
      right 0
      content attr( biaodian )
      line-height inherit
    ruby &,
    h-ru &
        position: relative
    h-char.biaodian.end:not(.close)
      position: absolute
      color: transparent
      font: 0/0 hidden-text
    .pseudo-element-clipboard & h-char.biaodian.end:not(.close)
      display: none

